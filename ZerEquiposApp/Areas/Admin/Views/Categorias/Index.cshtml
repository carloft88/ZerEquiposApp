@model IEnumerable<EPP.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<p>
    <a type="button" class="btn btn-outline-primary" asp-action="Create">Crear Nuevo</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a>
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoriaId">Info</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoriaId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
